@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-secondary" @onclick="IncrementCountBy2">Click me 4 more</button>
@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }


    void IncrementCountBy2()
    {
        currentCount += 2;
    }
}
